root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.editorconfig,.clang-format}]
indent_size = 2

[*.md]
indent_size = 2

[*.bat]
indent_size = 2

[.sln]
indent_style = tab
insert_final_newline = false

[*.{vcxproj,csproj,props,targets,vcxproj.filters}]
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
